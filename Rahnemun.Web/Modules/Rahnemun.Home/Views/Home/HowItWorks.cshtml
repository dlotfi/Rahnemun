        NavigationId = "HowItWorks",
        PageTitle = "چرا رهنمون؟",
        PageSubtitle = "درباره رهنمون بیشتر بدانید"
    });
    this.SetContentInfo(new ContentInfo
    {
        Title = "چرا رهنمون",
        Description = "رهنمون چه خدماتی ارائه می دهد؟ چگونه از رهنمون استفاده کنید؟",
        Url = Url.Route<IHowItWorksRoute>().Get(),
        ImageUrl = Content("~/Images/how-intro.jpg")
    });
}

@section ContentBody {

    <nav id="navigation-onepage">
        <h5>منوی پیمایش صفحه</h5>
        <ul class="container">
