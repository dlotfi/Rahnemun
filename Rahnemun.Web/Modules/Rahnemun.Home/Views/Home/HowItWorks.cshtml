    <div class="joinus-calltoaction two-column two-one animate">
        <div class="container">

            <section>
                <h2>شروع کنید!</h2>
            </section>

            <section>
                <p>همین حالا شروع کنید.</p>
                <a class="button default external" title="انتخاب گروه مشاوره" href="@(Url.Route<ICategoriesListRoute>().Get())">انتخاب گروه مشاوره</a>
            </section>

        </div>
    </div>
}