@using Rahnemun.EmailContracts
@model NewsletterSubscriptionWebPartModel

@{
    var page = Request.RawUrl;
    if (!String.IsNullOrEmpty(Model.PageTitle))
    {
        page = page + " (" + Model.PageTitle + ")";
    }
    page = Url.Encode(page);
}

