    <form class="form-inline validate" action="//rahnemun.us11.list-manage.com/subscribe/post?u=3c38bf41d82872ac81eedddc2&amp;id=cc762d5ad8&PAGE=@page" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" target="_blank" novalidate>
        <fieldset>
            <legend>عضویت در خبرنامه</legend>

            <div class="form-group">
                <input class="form-control required email" type="email" name="EMAIL" id="mce-EMAIL" required="required" aria-required="true" placeholder="ایمیل خود را وارد نمایید">
                <span class="validator" title="title"></span>
            </div>

            <input class="button default" title="عضویت در خبرنامه" type="submit" value="عضویت" name="subscribe" id="mc-embedded-subscribe">

